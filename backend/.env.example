# Server port
PORT=4000

# MongoDB connection string
# Atlas: mongodb+srv://<user>:<password>@cluster0.mongodb.net/lms?retryWrites=true&w=majority
MONGODB_URI=

# JWT secret for signing tokens
JWT_SECRET=replace_this_with_a_secure_random_value

# CORS origins allowed
# For local dev: http://localhost:5173
# For prod: comma-separated list, e.g. https://yourapp.com,https://admin.yourapp.com
CORS_ORIGIN=

# Directory to store uploads
UPLOAD_DIR=uploads

# Node environment: development | production | test
NODE_ENV=development

# Seeding defaults (dev only)
SEED_HR_EMAIL=hr@company.local
SEED_HR_PASSWORD=HrPass123!
FORCE_CHANGE_ON_FIRST_LOGIN=true
PRINT_SEED_PW=true
